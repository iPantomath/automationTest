<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->

    <style name="BootTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:background">@drawable/splash</item>
        <item name="ltRuntimeTheme">@style/MarketTheme</item>
    </style>

    <style name="MarketTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:buttonStyle">@style/ButtonDHLTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/primaryDark</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="fontFamily">@font/delivery_regular</item>
    </style>

    <style name="MarketThemeTransStatusBar" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:buttonStyle">@style/ButtonDHLTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@android:color/black</item>
        <item name="fontFamily">@font/delivery_regular</item>
    </style>

    <!-- ======= New themes ========= -->
    <style name="MainActivityTheme" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primaryDark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:buttonStyle">@style/ButtonDHLTheme</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/dark_grey</item>
        <item name="fontFamily">@font/delivery_regular</item>
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
    </style>

    <style name="AppDetailsActivityTheme" parent="MainActivityTheme">
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/primaryDark</item>
    </style>

    <style name="ToolbarTextAppearance" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="fontFamily">@font/delivery_bold</item>
    </style>

    <style name="SettingsItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:gravity">left|center_vertical</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:textAppearance">?attr/textAppearanceBody1</item>
        <item name="android:clickable">true</item>
        <item name="android:foreground">?attr/selectableItemBackgroundBorderless</item>
    </style>

    <style name="SettingsSwitchStyle">
        <item name="colorControlActivated">@color/primary</item>
    </style>
    <!-- ============================ -->

    <style name="AzureTheme" parent="BootTheme">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="BasicButton">
        <item name="android:textColor">@color/confirm_green</item>
        <item name="android:textSize">13sp</item>
        <item name="android:background">@android:color/transparent</item>
    </style>
    <style name="LoginTextLabel">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@android:color/white</item>
        <item name="android:textSize">19sp</item>
        <item name="android:textColor">@android:color/white</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorControlActivated">@android:color/white</item>
    </style>

    <style name="about_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#333333</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
    </style>
    <style name="about_value">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>
    <style name="AppMyRatingBar" parent="@android:style/Widget.RatingBar">
        <item name="android:progressDrawable">@drawable/app_my_rating_drawable</item>
        <item name="android:minHeight">40dp</item>
        <item name="android:maxHeight">40dp</item>
    </style>

    <style name="ReleaseTypeLabelStyle" parent="@android:style/TextAppearance.Widget.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">2dp</item>
        <item name="android:paddingBottom">2dp</item>
    </style>

    <style name="MyAlertDialogStyle" parent="Theme.MaterialComponents.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/white</item>
        <item name="buttonBarPositiveButtonStyle">@style/Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Alert.Button.Negative</item>
        <item name="buttonBarNeutralButtonStyle">@style/Alert.Button.Negative</item>
    </style>

    <style name="Alert.Button.Positive" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/accent</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Alert.Button.Negative" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="RedButton" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/red</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Translucent" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="LauncherTheme" parent="MarketTheme">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <style name="CategoryFilterCheckboxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:textColor">#ff555555</item>
        <item name="buttonTint">#ff555555</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PersonalisationTheme" parent="MarketTheme">
        <item name="android:statusBarColor">@color/dark_grey</item>
    </style>
</resources>
